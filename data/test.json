#include <FS.h>
#include <LittleFS.h>
#include <ArduinoJson.h>

void setup() {
  Serial.begin(115200);
  if (!LittleFS.begin()) {
    Serial.println("LittleFS mount failed!");
    return;
  }

  File file = LittleFS.open("/test.json", "r");
  if (!file) {
    Serial.println("Failed to open test.json");
    return;
  }

  DynamicJsonDocument doc(8192);  // allocate enough space
  DeserializationError error = deserializeJson(doc, file);
  if (error) {
    Serial.println("Failed to parse JSON");
    return;
  }

  Serial.println("Loaded test categories:");
  for (JsonObject category : doc["categories"].as<JsonArray>()) {
    Serial.println(category["name"].as<const char*>());
  }
}

